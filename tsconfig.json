{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ES6",
    "target": "es2016",
    "outDir": "./static/js",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strictNullChecks": true
  },
  "include": [
    "src/js/**/*",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/js/**/*.test.ts"
  ]
}